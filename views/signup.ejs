<div class="form-container">
  <form>
    <h1>Sign Up</h1>
    <hr />
    <!-- Username input -->
    <div class="form-outline mb-3">
      <label class="form-label" for="username">Username</label>
      <input
        type="text"
        id="username"
        class="form-control"
        name="username"
        placeholder="Username"
      />
    </div>

    <!-- Password input -->
    <div class="form-outline mb-3">
      <label class="form-label" for="password">Password</label>
      <input
        type="password"
        id="password"
        class="form-control"
        name="password"
        placeholder="Password"
      />
    </div>
    <!-- Repeat Password input -->
    <div class="form-outline mb-3">
      <label class="form-label" for="rpassword">Password Confirm</label>
      <input
        type="password"
        id="passwordConfirm"
        class="form-control"
        name="passwordConfirm"
        placeholder="Password"
      />
    </div>

    <!-- Submit button -->
    <button class="btn btn-primary btn-block mb-3">Register</button>
  </form>

  <button class="btn cancel btn-secondary btn-block mb-3">
    <a href="/listings">Cancel</a>
  </button>
</div>
