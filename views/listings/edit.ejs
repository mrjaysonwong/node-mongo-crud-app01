<div class="form-container">
  <form action="/listings/<%= listing.id %>?_method=PATCH" method="post">
    <h2>Edit Listing</h2>
    <hr />
    <!-- Listing input -->
    <div class="form-outline mb-3">
      <label class="form-label" for="listing">Listing</label>
      <input
        type="text"
        id="listing"
        class="form-control"
        name="name"
        placeholder="Listing Name"
        value="<%= listing.name %>"
      />
    </div>

    <!-- Price input -->
    <div class="form-outline mb-3">
      <label class="form-label" for="price">Price</label>
      <input
        type="number"
        id="price"
        class="form-control"
        name="price"
        placeholder="Price"
        min="0"
        value="<%= listing.price %>"
      />
    </div>

    <!-- Upload Image -->
    <!-- <div class="form-outline mb-3">
        <label class="form-label" for="formFile">Upload Image</label>
        <input type="file" id="formFile" class="form-control" name="img" />
      </div> -->

    <!-- Description input -->
    <div class="form-outline mb-3">
      <label class="form-label" for="description">Description</label>
      <textarea
        id="description"
        class="form-control"
        name="description"
        rows="3"
      >
<%= listing.description %></textarea
      >
    </div>
    <!-- Location input -->
    <div class="form-outline mb-3">
      <label class="form-label" for="location">Location</label>
      <input
        type="text"
        id="location"
        class="form-control"
        name="location"
        placeholder="Location"
        value="<%= listing.location %>"
      />
    </div>

    <!-- Submit button -->
    <button class="btn btn-primary btn-block mb-3">Update</button>
  </form>
  <a href="/listings">
    <button class="btn cancel btn-secondary btn-block mb-3">Cancel</button></a
  >
</div>
